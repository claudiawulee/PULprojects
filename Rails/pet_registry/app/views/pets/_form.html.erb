<head>
  <%# <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous"> %>
</head>
<body>
<%= form_with model: pet do |p| %>

  <div>
    <%= p.label :name %><br>
    <%= p.text_field :name %>
    <% pet.errors.full_messages_for(:name).each do |message| %>
    <div><%= message %></div>
    <% end %>
  </div>

   <div>
    <%= p.label :animal %><br>
    <%= p.text_area :animal %>
    <% pet.errors.full_messages_for(:animal).each do |message| %>
    <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= p.label :age %><br>
    <%= p.text_area :age %>
    <% pet.errors.full_messages_for(:age).each do |message| %>
    <div><%= message %></div>
    <% end %>
  </div>

   <div>
    <%= p.label :color %><br>
    <%= p.text_area :color %>
    <% pet.errors.full_messages_for(:color).each do |message| %>
    <div><%= message %></div>
    <% end %>
  </div>

   <div>
    <%= p.label :breed %><br>
    <%= p.text_area :breed %>
    <% pet.errors.full_messages_for(:breed).each do |message| %>
    <div><%= message %></div>
    <% end %>
  </div>

  <div>

  </div>
    <%= p.label :picture %><br>
    <%=p.file_field :picture%>
  <div>
    <br>
    <%= p.submit %>
  </div>
<% end %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>
