<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <%# <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous"> %>
</head>

<body>
    
<%= render "nav"%>


<div class = "px-5">
<div class = "py-3">
<a href=<%=new_pet_path%> class="btn btn-info" role="button">Add New Pet!</a>
</div>
</div>
<div class = "px-5">
<div class="row row-cols-1 row-cols-md-3 g-4">

<% @pets.each do |pet| %>
  <div class="col">
    <div class="card h-100">
        <%if pet.picture.attached?%>
            <img src="<%=(url_for(pet.picture))%>" class="card-img-top" alt="Picture of <%=pet.color%> <%=pet.animal%>"> 
        <%end%>
      <div class="card-body">
        <h5 class="card-title"><a href =<%=(url_for(pet))%>><%=pet.name%></a></h5>
        <p class="card-text">Animal: <%=pet.animal%></p>
        <p class="card-text">Breed: <%=pet.breed%></p>
        <p class="card-text">Age: <%=pet.age%></p>
      </div>
    </div>
  </div>
<%end%>
</div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
</body>



